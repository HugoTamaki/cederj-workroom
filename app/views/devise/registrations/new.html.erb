<div class="container">
  <div class="row row-centered">
    <div class="col-lg-4 col-centered">
      <h2><%= t('account.session.title') %></h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="form-group">
            <%= f.input :first_name, label: t('account.registration.new.first_name'), :required => true, input_html: {class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.input :last_name, label: t('account.registration.new.last_name'), :required => true, input_html: {class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.input :email, label: t('account.registration.new.email'), :required => true, input_html: {class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.input :password, label: t('account.registration.new.password'), :required => true, input_html: {class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, label: t('account.registration.new.password_confirmation'), :required => true, input_html: {class: 'form-control'} %>  
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('account.registration.new.button'), class: 'btn btn-lg btn-block btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
